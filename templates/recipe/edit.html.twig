{% extends 'base.html.twig' %}

{% block title %}Modifier la recette
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">Modifier la recette</h1>

		{{ form_start(form) }}
		<div class="mb-3">
			{{ form_label(form.title, 'Titre de la recette') }}
			{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.description, 'Description') }}
			{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.category, 'Catégorie') }}
			{{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.ingredients, 'Ingrédients') }}
			{{ form_widget(form.ingredients, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.steps, 'Étapes de préparation') }}
			{{ form_widget(form.steps, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.preparationTime, 'Temps de préparation (minutes)') }}
			{{ form_widget(form.preparationTime, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.image, 'URL de l’image') }}
			{{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
			{% if recipe.image %}
				<img src="{{ recipe.image }}" alt="{{ recipe.title }}" class="img-fluid mt-2" style="max-height:200px;">
			{% endif %}
		</div>

		<button type="submit" class="btn btn-primary">Modifier</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
